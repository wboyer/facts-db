#!/bin/bash

mongo <<EOF
db.facts.remove();
db.facts.ensureIndex( { "subj": 1, "pred": 1, "obj": 1 }, { "unique": true } );
db.facts_summary.remove();
EOF

dos2unix -l < facts.csv | sed \
-e 's/^/db.facts.save( { "subj": "/' \
-e 's/,/"~ "pred": "/1' \
-e 's/,/", "obj": "/' \
-e 's/~/,/' \
-e 's/$/" } )/' | \
tr -d '\r' | mongo

mongo ../src/db/build-summary-collection.js
